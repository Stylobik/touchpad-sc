<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();


$(function() {
  $(".btn-default").click(function (e) { 
    console.log("You pressed button: " + e.button);
    e.preventDefault();
    var touche = $(this).attr('mapping')
    socket.emit('keypressed', touche);
  });
  $(".btn-double").click(function (e) { 
    e.preventDefault();
    var touche = $(this).attr('mapping')
    socket.emit('keypressedDouble', touche);
  });
  $(".btn-r").click(function (e) { 
    e.preventDefault();
    var touche = $(this).attr('mapping')
    socket.emit('keypressedR', touche);
  });
});

var app = {};

ons.ready(function () {
  ons.createElement('action-sheet.html', { append: true })
    .then(function (sheet) {
      app.showFromTemplate = sheet.show.bind(sheet);
      app.hideFromTemplate = sheet.hide.bind(sheet);
    });
});

app.showRoutes = function () {
  ons.openActionSheet({
    cancelable: true,
    buttons: [
      'Grim Hex',
      'Port Olisar',
      {
        label: 'Label 2',
        modifier: 'destructive'
      }
    ]
  }).then(function (index) { console.log('index: ', index) });
};
app.showHangar = function () {
  ons.openActionSheet({
    cancelable: true,
    buttons: [
      'Arrow',
      'Gladius'
    ]
  }).then(function (index) { console.log('index: ', index) });
};
</script>

